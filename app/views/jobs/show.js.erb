$('#view-job').hide().fadeToggle(1500).html("<%= j render 'show', job: @job %>");

var container = $("#view-job");
var page = $("html,body");
var products = $("#view-products");
var client = $("#view-client");

$('html,body').animate({
  scrollTop: container.offset().top - 145 },
2000);

$(function() {
  $('#up').click(function() {
    $('html,body').animate({
      scrollTop: page.offset().top - 0 },
    2000);
  });
});


$(function() {
  $('.show-products').click(function() {
    $('#view-products').fadeToggle(1500).html("<%= j render 'products_index', job: @job %>");
    $('html,body').animate({
      scrollTop: products.offset().top - 145 },
    2000);
  });
});


$(function() {
  $('#show-client').click(function() {
    $('#view-client').hide().fadeToggle(1500).html("<%= j render 'client_index', c: @client if @client %>");
    $('html,body').animate({
      scrollTop: client.offset().top - 145 },
    2000);
  });
});

