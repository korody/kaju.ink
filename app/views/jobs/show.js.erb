 $('#view-job').hide().fadeToggle(1500).html("<%= j render 'show', job: @job %>");

var container = $("#view-job"),
    page = $("html,body"),
    products = $("#view-products"),
    client = $("#view-client"),
    up = $("img#up"),
    random = $("a#random");

$(page).animate({
  scrollTop: container.offset().top - 114 },
2000);


$(function() {
  $(up).click(function() {
    $(page).animate({
      scrollTop: page.offset().top - 0 },
    2000);
  });
});


$(window).scroll(function () {
  if($(window).scrollTop() >= (container.offset().top - 114)) {
    up.css({
      position: 'fixed',
      top: '114px'      
    });
    // alert($(window).scrollTop() - container.offset().top);
  } else {
    up.css({
      position: 'static'
    })
  }
});

$(window).scroll(function () {
  if($(window).scrollTop() >= (container.offset().top - 114)) {
    random.css({
      position: 'fixed',
      top: '114px',
      right: '0px'      
    });
    // alert($(window).scrollTop() - container.offset().top);
  } else {
    random.css({
      position: 'static'
    })
  }
});


$(function() {
  $('#buy').click(function() {
    products.fadeToggle(1500).html("<%= j render 'products_index', job: @job %>");
  });
});


$(function() {
  $('#show-client').click(function() {
    client.hide().fadeToggle(1500).html("<%= j render 'client_index', c: @client if @client %>");
    // page.animate({
    //   scrollTop: client.offset().top - 114 },
    // 2000);
  });
});


