- flash.each do |key, message|
  div class="alert alert-#{key}"
    a.close data-dismiss="alert" &times; 
    = message
= render 'error_messages', object: @message
= simple_form_for @message, url: hello_path, html: { class: 'form-vertical' }, remote: true do |f|
  .form-group
    = f.label :name, class: 'sr-only'
    = f.input_field :name, class: 'form-control', placeholder: 'name'
  .form-group
    = f.label :email, class: 'sr-only'
    = f.input_field :email, class: 'form-control', placeholder: 'e-mail'
  .form-group
    = f.label :subject, class: 'sr-only'
    = f.input_field :subject, class: 'form-control', placeholder: 'subject'
  .form-group
    = f.label :body, class: 'sr-only'
    = f.input :body, as: :text, error: false, label: false, input_html: { class: 'form-control', rows: 6}, placeholder: 'say hello'
  = f.submit 'send e-mail', class: 'btn-link', id: 'send-mail'
#loading
