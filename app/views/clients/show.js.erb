var client = $('#<%= dom_id @client %>'),
    pop = '.pop-job',
    reveal = '.reveal-job',
    arrow = 'a#arrow-jobs';

client.children(arrow).toggle(400);
client.css('opacity','0.6').parent('.mc3').next(reveal).toggle().html("<%= j render 'client_jobs', c: @client %>");
client.parent('.mc3').next(reveal).children(pop).effect('highlight', { color: '#FFA07A' }, 3000);