var client = $('#<%= dom_id @client %>'),
    pop = '.pop-job',
    reveal = '.reveal-job',
    arrow = 'a#arrow-jobs';

client.children(arrow).toggle(400);
client.parents('li').css('opacity','0.6').next(reveal).toggle().html("<%= j render 'show', c: @client %>");
client.parent('li').next(reveal).children(pop).effect('highlight', { color: '#FFA07A' }, 3000);
